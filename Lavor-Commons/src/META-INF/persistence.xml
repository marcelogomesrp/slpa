<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="Lavor-CommonsPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>lavor.entidade.PostoDeAtendimento</class>
    <class>lavor.entidade.Usuario</class>
    <class>lavor.entidade.Categoria</class>
    <class>lavor.entidade.Equipamento</class>
    <properties>
      <property name="hibernate.connection.username" value="marcelo"/>
      <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
      <property name="hibernate.connection.password" value="admin..."/>
      <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/lavor"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
    </properties>
  </persistence-unit>
</persistence>
